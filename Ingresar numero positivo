#include <stdio.h>
int main() {
    int numero;
    do {
        printf("Ingrese un número positivo: ");
        scanf("%d", &numero);
        
        if (numero <= 0) {
            printf("El número no es positivo. Intente de nuevo.\n");
        }
    } while (numero <= 0);
    printf("¡Gracias! Usted ingresó el número %d\n", numero);
    return 0;
}
